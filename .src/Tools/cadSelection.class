Public Function FindGrip(x As Float, y As Float) As Grip

    Dim g As Grip

    For Each g In gcd.Drawing.Sheet.Grips
        If puntos.Around(x, y, g.x, g.y, gcd.Metros(Config.GripProximityDistance)) Then

            Return g
        Endif
        '
    Next
    DrawingAids.txtFrom = ""
    Return Null

End


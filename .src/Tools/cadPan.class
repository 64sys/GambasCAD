' Tool maintained by Terco
Inherits ToolsBase
Create Static
Public Const Gender As String = "PAN"

Public Function Start(Optional ElemToBuild As Variant, Optional _Mode As Integer = 0) As Boolean

    Me.Prompt = ("Panning")

End

Public Function MouseDown() ' called by FCAD-> DrawingArea_MouseDown

    Me.SelStartX = mouse.x
    Me.SelStartY = mouse.y
    gcd.Drawing.Sheet.GlSheet.Mouse = Mouse.SizeAll
    Me.active = True

End

Public Function MouseUp()

    gcd.Drawing.Sheet.GlSheet.Mouse = Mouse.Cross
    gcd.flgNewPosition = True
    DrawingAIds.RebuildGrId
    Me.active = False

End

Public Function MouseMove()

    If Not Me.active Then Return
    If gcd.Drawing.Sheet.viewport Then  ' hacemos un paneo del contenido del Viewport

        gcd.Drawing.Sheet.viewport.PanX += (mouse.x - Me.SelStartX) / gcd.Drawing.Sheet.ScaleZoom
        gcd.Drawing.Sheet.viewport.PanY -= (mouse.y - Me.SelStartY) / gcd.Drawing.Sheet.ScaleZoom

    Else

        gcd.Drawing.Sheet.PanX += (mouse.x - Me.SelStartX)
        gcd.Drawing.Sheet.PanY -= (mouse.y - Me.SelStartY)

    End If
    Me.SelStartX = mouse.x
    Me.SelStartY = mouse.y
    gcd.Redraw

End

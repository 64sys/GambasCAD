' Tool maintained by Terco
Inherits ToolsBase
Create Static
Public Const Gender As String = "PAN"

Public Function Start(Optional ElemToBuild As Variant, Optional _Mode As Integer = 0) As Boolean

    DrawingAids.CmdLineHelper = ("Panning")

End

Public Function MouseDown() ' called by FCAD-> DrawingArea_MouseDown

    Me.SelStartX = mouse.x
    Me.SelStartY = mouse.y
    gcd.MainGLArea.Mouse = Mouse.SizeAll
    Me.active = True

End

Public Function MouseUp() ' called by FCAD-> DrawingArea_MouseUp

    gcd.MainGLArea.Mouse = Mouse.Cross
    gcd.flgNewPosition = True
    Me.active = False

End

Public Function MouseMove() ' called by FCAD-> DrawingArea_MouseMove

    If Not Me.active Then Return
    gcd.CurrentDrawing.PanX += (mouse.x - Me.SelStartX)
    gcd.CurrentDrawing.PanY -= (mouse.y - Me.SelStartY)

    Me.SelStartX = mouse.x
    Me.SelStartY = mouse.y
    gcd.Redraw

End
